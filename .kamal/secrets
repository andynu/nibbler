# Secrets for Kamal deployment
# Load from .kamal/secrets.env (not committed to git)
# Run 'kamal secrets init' or manually create .kamal/secrets.env with:
#   SECRET_KEY_BASE=<your-secret>
#   TTRB_DATABASE_PASSWORD=<your-password>

if [ -f .kamal/secrets.env ]; then
  source .kamal/secrets.env
else
  echo "ERROR: .kamal/secrets.env not found. Create it with:" >&2
  echo "  SECRET_KEY_BASE=\$(openssl rand -hex 64)" >&2
  echo "  TTRB_DATABASE_PASSWORD=\$(openssl rand -base64 24)" >&2
  exit 1
fi
