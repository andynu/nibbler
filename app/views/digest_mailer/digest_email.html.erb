<div style="max-width: 600px; margin: 0 auto; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 16px; line-height: 1.5; color: #1a1a1a;">
  <div style="padding: 24px 0; border-bottom: 1px solid #e5e5e5;">
    <h1 style="margin: 0; font-size: 24px; font-weight: 600; color: #1a1a1a;">
      Nibbler Daily Digest
    </h1>
    <p style="margin: 8px 0 0; color: #666;">
      <%= @articles.size %> new article<%= @articles.size == 1 ? '' : 's' %> for <%= Date.current.strftime('%B %d, %Y') %>
    </p>
  </div>

  <div style="padding: 24px 0;">
    <% @articles.each_with_index do |user_entry, index| %>
      <% entry = user_entry.entry %>
      <div style="<%= index > 0 ? 'border-top: 1px solid #e5e5e5; padding-top: 20px; margin-top: 20px;' : '' %>">
        <div style="margin-bottom: 8px;">
          <% if user_entry.feed %>
            <span style="font-size: 12px; color: #666; text-transform: uppercase; letter-spacing: 0.05em;">
              <%= user_entry.feed.title %>
            </span>
          <% end %>
          <% if user_entry.score && user_entry.score > 0 %>
            <span style="display: inline-block; margin-left: 8px; padding: 2px 8px; background: #3b82f6; color: white; border-radius: 12px; font-size: 12px; font-weight: 500;">
              Score: <%= user_entry.score %>
            </span>
          <% end %>
        </div>

        <h2 style="margin: 0 0 8px; font-size: 18px; font-weight: 600;">
          <a href="<%= root_url %>?entry=<%= user_entry.uuid %>" style="color: #1a1a1a; text-decoration: none;">
            <%= entry.title %>
          </a>
        </h2>

        <p style="margin: 0 0 8px; color: #666; font-size: 14px;">
          <%= entry.updated&.strftime('%B %d, %Y at %l:%M %p') || entry.date_entered&.strftime('%B %d, %Y at %l:%M %p') %>
        </p>

        <% content_preview = strip_tags(entry.content).truncate(200) %>
        <% if content_preview.present? %>
          <p style="margin: 0; color: #444;">
            <%= content_preview %>
          </p>
        <% end %>

        <p style="margin: 12px 0 0;">
          <a href="<%= root_url %>?entry=<%= user_entry.uuid %>" style="color: #3b82f6; text-decoration: none; font-weight: 500;">
            Read more &rarr;
          </a>
        </p>
      </div>
    <% end %>
  </div>

  <div style="border-top: 1px solid #e5e5e5; padding: 24px 0; margin-top: 24px; font-size: 14px; color: #666;">
    <p style="margin: 0 0 8px;">
      <a href="<%= root_url %>" style="color: #3b82f6; text-decoration: none;">Open Nibbler</a>
      &nbsp;&middot;&nbsp;
      <a href="<%= root_url %>settings" style="color: #3b82f6; text-decoration: none;">Preferences</a>
    </p>
    <p style="margin: 0;">
      To stop receiving these emails,
      <a href="<%= root_url %>settings?unsubscribe_digest=1" style="color: #3b82f6; text-decoration: none;">unsubscribe here</a>.
    </p>
  </div>
</div>
